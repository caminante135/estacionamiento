<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/historialtitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Arriendo"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/historial_rv_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historialtitle"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_address_item"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_address_item"
            android:gravity="center_vertical"
            android:text="Mapulemu 7183"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/historial_rv_fechaIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historial_rv_direccion"
            android:drawableLeft="@drawable/ic_calendar_green"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_calendar_green"
            android:gravity="center_vertical"
            android:text="21 de Octubre 16:00"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/historial_rv_fechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historial_rv_fechaIni"
            android:drawableLeft="@drawable/ic_calendar_green"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_calendar_green"
            android:gravity="center_vertical"
            android:text="21 de Octubre, 17:00"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/historial_rv_costo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historial_rv_fechaFin"
            android:drawableLeft="@drawable/ic_price"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_price"
            android:gravity="center_vertical"
            android:text="$9500"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/historial_rv_imageEstado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_toEndOf="@+id/historial_rv_fechaFin"
            android:layout_toRightOf="@+id/historial_rv_fechaFin"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_price" />

        <TextView
            android:id="@+id/historial_rv_txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historial_rv_imageEstado"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/historial_rv_fechaFin"
            android:layout_toRightOf="@+id/historial_rv_fechaFin"
            android:text="En arriendo"
            android:textSize="16dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>