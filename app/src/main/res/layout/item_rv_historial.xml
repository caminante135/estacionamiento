<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/relativo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/historialtitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Arriendo"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historialtitle"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/historial_rv_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/historialtitle"
                    android:layout_marginTop="1dp"
                    android:drawableLeft="@drawable/ic_address_item"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_address_item"
                    android:gravity="center_vertical"
                    android:text="Mapulemu 7183"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/historial_rv_fechaIni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/historial_rv_direccion"
                    android:drawableLeft="@drawable/ic_calendar_green"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_calendar_green"
                    android:gravity="center_vertical"
                    android:text="21 de Octubre 16:00"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/historial_rv_fechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/historial_rv_fechaIni"
                    android:drawableLeft="@drawable/ic_calendar_green"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_calendar_green"
                    android:gravity="center_vertical"
                    android:text="21 de Octubre, 17:00"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/historial_rv_costo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/historial_rv_fechaFin"
                    android:drawableLeft="@drawable/ic_price"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_price"
                    android:gravity="center_vertical"
                    android:text="$9500"
                    android:textSize="14dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/historial_rv_imageEstado"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/available" />

                <TextView
                    android:id="@+id/historial_rv_txtEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="En arriendo"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>