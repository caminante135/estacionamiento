<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gerardo.miestacionamiento.ui.fragment.EstanciaFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Definir tiempo de estancia"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llegada"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_estancia_definir_llegada"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_bg"
                android:text="Definir"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_estancia_fecha_llegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lines="2"

                android:textColor="@color/colorPrimaryText"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salida"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_estancia_definir_salida"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_bg"
                android:text="Definir"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_estancia_fecha_salida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_estancia_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="Cantidad de Horas: 2"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_estancia_aceptar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg"
        android:text="Aceptar"
        android:textColor="@color/white" />

</LinearLayout>
